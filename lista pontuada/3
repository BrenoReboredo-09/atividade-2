#include<stdio.h>

int main(){
    float raio=0,volume=0,area=0;       

    printf("Digite o valor do raio: ");
    scanf("%f",&raio);     

    volume= (4.0/3.0)*3.14159*raio*raio*raio;
    area= 4*3.14159*raio*raio;

    printf("volume da esfera: %.5f\n",volume);
    printf("area da esfera: %.5f",area);

    return 0;
}